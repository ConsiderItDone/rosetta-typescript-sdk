{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "paths": {
      "types": [
        "src/types"
      ],
      "rosetta-typescript-sdk": [
        "./"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "declaration": true,
    "allowJs": true,
    "outDir": "dist",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "ESNext"
    ],
    "types": [],
  },
  "include": [
    "*",
    "src/**/*",
    "src/server/api/openapi.yaml",
    "dist/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}